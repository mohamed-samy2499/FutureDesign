@model IEnumerable<Sample>
@{
    ViewData["Title"] = "Index";
}
<style>
    /***********/
.movie-poster
{
    margin-top: 1rem;
    margin-bottom: 1rem;
    margin-left: 3.8rem;
    overflow: hidden;
}
.layer
{
    background-color:rgba(255, 255, 255, 0.7);
    top: 100%;

    left: 0;
   
    transition: all 0.5s;
}
.movie-poster img
{
    height: 400px;
    width:400px;
    object-fit: contain;
}
.movie-poster:hover .layer
{
    top: 0;
    bottom:0;
}
.borderClass{
    border-style: groove ;
    border-radius: 15px;
}
</style>
<h1>All Samples</h1>

<br />

<a asp-action="Create" class="btn btn-primary" >Add new sample</a>
<br />
<br />
@if(Model?.Count()> 0)
{
<div class="container ">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 borderClass">
                <div class="movie-poster position-relative">

                        <img  src="@item.ImgPath" alt="" class="w-100 rounded">
                        <div class="text-center">
                            <h3 class="text-center">@item.Category?.Name</h3>
                        <a  class = "btn btn-info" asp-action="Details" asp-controller = "Sample" asp-route-id="@item.Id">
                            <i class = "fas fa-eye"></i>Details
                        </a>
                            <a  class = "btn btn-danger" asp-action="Delete" asp-controller = "Sample" asp-route-id="@item.Id">
                            <i class = "fas fa-trash"></i>Delete
                        </a>
                        <a  class = "btn btn-success" asp-action="Edit" asp-controller = "Sample" asp-route-id="@item.Id">
                            <i class = "fas fa-edit"></i>Update
                        </a>
                        </div>
                </div>

            </div>
                
        }
    </div>

</div>
    
}
else
{
    <div class="alert alert-warning">
        <h3 >No Data Found!</h3>
    </div>
}